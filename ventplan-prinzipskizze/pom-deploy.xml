<!-- jboss-as-maven-plugin -->
<plugin>
    <groupId>org.jboss.as.plugins</groupId>
    <artifactId>jboss-as-maven-plugin</artifactId>
    <executions>
        <!-- Deploy the application on "install" -->
        <execution>
            <id>jboss-deploy</id>
            <phase>install</phase>
            <goals>
                <goal>deploy</goal>
            </goals>
            <configuration>
                <hostname>localhost</hostname>
                <port>9999</port>
                <username>admin</username>
                <password>password</password>
            </configuration>
        </execution>
        <!-- Re-deploy the application on "deploy" -->
        <execution>
            <id>jboss-redeploy</id>
            <phase>deploy</phase>
            <goals>
                <goal>redeploy</goal>
            </goals>
            <configuration>
                <hostname>localhost</hostname>
                <port>9999</port>
                <username>admin</username>
                <password>password</password>
            </configuration>
        </execution>
    </executions>
</plugin>
